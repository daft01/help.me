<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.firstapp.helpme.MainActivity"
    >

    <Button
        android:id="@+id/lifeThreateningEmergency"
        android:layout_width="276dp"
        android:layout_height="181dp"
        android:layout_marginBottom="16dp"
        android:height="100dp"
        android:background="@color/red"
        android:gravity="center"
        android:onClick="lifeThreateningEmergencyOnClicked"
        android:text="Help!"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/saveButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"/>
    />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="279dp"
        android:layout_height="190dp"
        android:layout_marginBottom="100dp"
        android:width="300dp"
        android:height="100dp"
        android:background="@color/green"
        android:gravity="center"
        android:onClick="saveButtonClicked"
        android:text="Save"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"/>

    <ImageView
        android:id="@+id/resources"
        android:layout_width="84dp"
        android:layout_height="63dp"
        android:onClick="resourcesButtonClicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/map"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/groups"
        app:layout_constraintTop_toBottomOf="@+id/saveButton"
        app:srcCompat="@drawable/resources"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"/>

    <ImageView
        android:id="@+id/settings"
        android:layout_width="61dp"
        android:layout_height="55dp"
        android:onClick="settingsButtonClicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/map"
        app:layout_constraintTop_toBottomOf="@+id/saveButton"
        app:layout_constraintVertical_bias="0.652"
        app:srcCompat="@drawable/setting"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"/>

    <ImageView
        android:id="@+id/groups"
        android:onClick="contanctClicked"
        android:layout_width="64dp"
        android:layout_height="67dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/resources"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveButton"
        app:srcCompat="@drawable/contacts"/>

    <ImageView
        android:id="@+id/map"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:onClick="mapClicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/settings"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/resources"
        app:layout_constraintTop_toBottomOf="@+id/saveButton"
        app:layout_constraintVertical_bias="0.791"
        app:srcCompat="@drawable/mappic"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="291dp"
        android:layout_height="107dp"
        app:layout_constraintBottom_toTopOf="@+id/lifeThreateningEmergency"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo"/>


</android.support.constraint.ConstraintLayout>
